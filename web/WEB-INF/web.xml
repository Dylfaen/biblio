<?xml version="1.0" encoding="UTF-8"?>
    <web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
             version="3.1">
    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>controller.MainServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/toto</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GestionTestsJDBC</servlet-name>
        <servlet-class>model.requests.GestionTestsJDBC</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GestionTestsJDBC</servlet-name>
        <url-pattern>/testjdbc</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Authentification</servlet-name>
        <servlet-class>controller.Authentification</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Authentification</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ServletEmprunt</servlet-name>
        <servlet-class>controller.ServletEmprunt</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletEmprunt</servlet-name>
        <url-pattern>/emprunt</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Retour</servlet-name>
        <servlet-class>controller.ServletRetour</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Retour</servlet-name>
        <url-pattern>/retour</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Recherche</servlet-name>
        <servlet-class>controller.Rechercher</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Recherche</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    </web-app>